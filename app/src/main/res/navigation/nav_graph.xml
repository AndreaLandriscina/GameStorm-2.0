<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.gamestorm.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.gamestorm.ui.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profileFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.gamestorm.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_searchFragment_to_gameActivity"
            app:destination="@id/gameActivity" />

        <action
            android:id="@+id/action_searchFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <activity
        android:id="@+id/gameActivity"
        android:name="com.example.gamestorm.ui.GameActivity"
        android:label="activity_game"
        tools:layout="@layout/activity_game" />
    <activity
        android:id="@+id/franchiseActivity"
        android:name="com.example.gamestorm.ui.FranchiseActivity"
        android:label="activity_franchise"
        tools:layout="@layout/activity_franchise" />
    <activity
        android:id="@+id/genreActivity"
        android:name="com.example.gamestorm.ui.GenreActivity"
        android:label="activity_genre"
        tools:layout="@layout/activity_genre" />
    <fragment
        android:id="@+id/screenshotFragment"
        android:name="com.example.gamestorm.ui.ScreenshotFragment"
        android:label="fragment_screenshot"
        tools:layout="@layout/fragment_screenshot" />
</navigation>